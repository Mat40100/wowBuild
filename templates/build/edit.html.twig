{% extends 'base.html.twig' %}

{% block title %}Edit Build{% endblock %}

{% block body %}
    <h1 class="col-12 m-2 text-center text-white">Modification d'un build</h1>

    <div class="col-12 row justify-content-center align-items-center align-content-center text-white">
        {{ include('build/_form.html.twig') }}
        {% if app.user is same as(build.author) or is_granted('ROLE_ADMIN') %}
        <div class="col-12 row justify-content-center">
            {{ include('build/_delete_form.html.twig') }}
        </div>
        {% endif %}
    </div>
    <div class="col-12 row justify-content-start">
        <a class="col-auto btn btn-outline-primary" href="{{ path('app_build_index') }}">Retour aux builds</a>
    </div>
{% endblock %}
